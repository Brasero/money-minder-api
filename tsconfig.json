{
  "compilerOptions": {
    "rootDirs": ["src"],
    "lib": ["es2021"],
    "target": "es2021",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "types": ["node"],
    "outDir": "./dist"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}