{
  "compilerOptions": {
    "rootDirs": ["src"],
    "lib": ["es2021"],
    "target": "es2021",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "types": ["node", "jest"],
    "outDir": "./dist",
  },
  "include": ["src/**/*.ts", "src/**/**/*.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
    "experimentalSpecifierResolution": "node",
    "transpileOnly": true,
    "esm": true
  }
}